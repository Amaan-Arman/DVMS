@{
    ViewData["Title"] = "Track Guest";
}
@if (TempData["DbVarification"] == null && TempData["NetVarification"] == null && TempData["trailVerion"] == null)

{
<div class="page" ng-controller="TrackguestContrller">
    <partial name="PartialViewHeader" />
    <div class="section-body">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center">
                <ul class="nav nav-tabs page-header-tab">
                    <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#IN-list">Check-IN List</a></li>
                    <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#OUT-list">Check-OUT List</a></li>
                </ul>
            </div>
           
        </div>
    </div>

    <div class="section-body mt-3">
        <div class="container-fluid">
            <div class="tab-content">
                <div class="tab-pane fade show active" id="IN-list" role="tabpanel">
                        <div class="row clearfix">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-lg-5 col-md-4 col-sm-6">
                                                <div class="input-group">
                                                    <input type="text" id="filter_id" class="form-control" placeholder="Name, Department, Office">
                                                </div>
                                            </div>
                                            <div class="col-lg-2 col-md-4 col-sm-6">
                                                <div class="input-group">
                                                    <input type="date" id="start_date_id" class="form-control" data-provide="datepicker" placeholder="Start Date">
                                                </div>
                                            </div>
                                            <div class="col-lg-2 col-md-4 col-sm-6">
                                                <div class="input-group">
                                                    <input type="date" id="end_date_id" class="form-control" data-provide="datepicker" placeholder="End Date">
                                                </div>
                                            </div>
                                            <div class="col-lg-2 col-md-4 col-sm-6">
                                                <a ng-click="GuestSearchFunction('Checkin')" class="btn btn-primary btn-block" title="">Search</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <div class="row clearfix">
                        <div class="col-12">
                            <div class="card">
                                <div class="table-responsive">
                                    <table class="table table-hover table-striped table-vcenter mb-0 text-nowrap">
                                         <thead>
                                            <tr>
                                                <th colspan="5">Check-IN Detail</th>
                                                <th colspan="3">Activity</th>
                                            </tr>
                                            <tr>
                                                <th class="w30">&nbsp;</th>
                                                <th>Invitation ID</th>
                                                <th>Guest Name</th>
                                                <th>Host Name</th>
                                                <th>Floor No</th>
                                                <th>Company </th>
                                                <th>Check-In</th>
                                                <th>Check-Out</th>
                                                <th >Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="c in GuestCheckInList">
                                                <td>
                                                    <label class="custom-control custom-checkbox">
                                                        <input type="checkbox" class="custom-control-input" name="example-checkbox1" value="option1">
                                                        <span class="custom-control-label">&nbsp;</span>
                                                    </label>
                                                </td>
                                                <td><a href="#">{{c.invitation_ID}}</a></td>
                                                <td><span>{{c.guestFullName}}</span></td>
                                                <td><span>{{c.hostName}}</span></td>
                                                <td><span>{{c.floor_no}}</span></td>
                                                <td><span>{{c.company_name}}</span></td>
                                                <td><span>{{c.gusetCheckInTime}}</span></td>
                                                <td>{{c.gusetCheckOutTime}}</td>
                                                <th ng-if="c.gusetCheckOutTime =='---' "><button class="btn btn-primary" ng-click="Guestcheckout(c.invitation_ID)">Check Out</button></th>
                                                @* <td><span class="tag tag-danger">{{c.HostName}}</span></td>
                                                <td><span class="tag tag-info">Medium</span></td>*@
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="OUT-list" role="tabpanel">
                        <div class="row clearfix">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-lg-5 col-md-4 col-sm-6">
                                                <div class="input-group">
                                                    <input type="text" id="filter_id_out" class="form-control" placeholder="Name, Department, Office">
                                                </div>
                                            </div>
                                            <div class="col-lg-2 col-md-4 col-sm-6">
                                                <div class="input-group">
                                                    <input type="date" id="start_date_id_out" class="form-control" data-provide="datepicker" placeholder="Start Date">
                                                </div>
                                            </div>
                                            <div class="col-lg-2 col-md-4 col-sm-6">
                                                <div class="input-group">
                                                    <input type="date" id="end_date_id_out" class="form-control" data-provide="datepicker" placeholder="End Date">
                                                </div>
                                            </div>
                                            <div class="col-lg-2 col-md-4 col-sm-6">
                                                <a ng-click="GuestSearchFunction('Checkout')" class="btn btn-primary btn-block" title="">Search</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <div class="row clearfix">
                        <div class="col-12">
                            <div class="card">
                                <div class="table-responsive">
                                    <table class="table table-hover table-striped table-vcenter mb-0 text-nowrap">
                                        <thead>
                                            <tr>
                                                <th colspan="5">Check-OUT Detail</th>
                                                <th colspan="3">Activity</th>
                                            </tr>
                                            <tr>
                                                <th class="w30">&nbsp;</th>
                                                <th>Invitation ID</th>
                                                <th>Guest Name</th>
                                                <th>Host Name</th>
                                                <th>Floor No</th>
                                                <th>Company </th>
                                                <th>Check-In</th>
                                                <th>Check-Out</th>
                                                <th>Activity</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="c in GuestCheckOutList">
                                                <td>
                                                    <label class="custom-control custom-checkbox">
                                                        <input type="checkbox" class="custom-control-input" name="example-checkbox1" value="option1">
                                                        <span class="custom-control-label">&nbsp;</span>
                                                    </label>
                                                </td>
                                                <td><a href="#">{{c.invitation_ID}}</a></td>
                                                <td><span>{{c.guestFullName}}</span></td>
                                                <td><span>{{c.hostName}}</span></td>
                                                <td><span>{{c.floor_no}}</span></td>
                                                <td><span>{{c.company_name}}</span></td>
                                                <td><span>{{c.gusetCheckInTime}}</span></td>
                                                <td>{{c.gusetCheckOutTime}}</td>
                                                @* <td><span class="tag tag-danger">{{c.HostName}}</span></td>
                                                <td><span class="tag tag-info">Medium</span></td>*@
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
}

else

{
    @Html.Partial("~/Views/Shared/PartialViewModalsValidation.cshtml")
}
<script src="~/assets/bundles/lib.vendor.bundle.js"></script>
<script src="~/lib/angularjs/angular.min.js"></script>
<script src="~/lib/angularjs/signalr.js"></script>

<script src="~/contollerscript/TrackguestContrller.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/lib/angularjs/signalRService.js"></script>
