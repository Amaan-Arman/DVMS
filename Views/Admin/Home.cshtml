    <div class="modal fade" id="modalcameraback" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="VisitorLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered ">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="VisitorLabel">Camera</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <video id="videoback" width="320" height="240" autoplay style="transform: scaleX(-1);"></video>
                    <br />
                    @* <button class="btn btn-primary" ng-click="cnicback()">📸 Capture Photo</button> *@
                    <canvas id="canvasback" width="320" height="240" style="display:none;"></canvas>
                </div>
                <div class="modal-footer">
                    <button type="button" ng-click="stopCamera()" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button class="btn btn-primary" ng-click="cnicback()">📸 Capture Photo</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Guest -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content">
                <div class="modal-header">

                    <h5 class="modal-title" id="staticBackdropLabel">Guest</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="video-container" class="d-flex justify-content-center">
                        <video id="videoguest" playsinline></video>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" ng-click="stopScanning()" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
