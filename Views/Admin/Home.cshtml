@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" ng-app="ScannerApp">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    @* <link rel="icon" href="~/admin_assets/images/comapanylogo.jpg" type="image/x-icon" /> *@

    <!--  Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oleo+Script:wght@400;700&family=Oswald:wght@200..700&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Racing+Sans+One&family=Raleway:ital,wght@0,100..900;1,100..900&family=Sora:wght@100..800&display=swap" rel="stylesheet">
   
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/css/main.css" rel="stylesheet" />
    <link href="~/assets/css/theme1.css" rel="stylesheet" />
    <link href="~/assets/plugins/sweetalert/sweetalert.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <style>
        :root {
            --primary-color: rgb(21, 19, 133);
        }
        * {
            box-sizing: border-box;
            font-family: sans-serif;
        }
        .txt-color {
            color: var(--primary-color);
        }
        .linkclass{
            background:white;
            align-items: center;
            justify-content: center;
            flex-direction:column;
            display: flex;
            height: 100%;
            width: 75%;
            border: 2px solid #e5e7eb;
            text-decoration:none;

            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.05);
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .linkclass, a {
            color: black;
        }
        .linkclass:hover {
            background: #f9fafb ;
            color:white;
            border: 2px solid white;
            transition: all .3s ease-in-out;

            transform: translateY(-5px);
            box-shadow: 0 15px 25px rgba(0, 0, 0, 0.1);
      }
      h1{
            font-family: 'Poppins', sans-serif;
            font-size: 2rem;
            font-weight: 500;
            color: #1f2937;
      }
        p {
            font-size: 1rem;
            color: #6b7280; /* Muted gray */
        }
    </style>
    <title>Entrance - DVMS</title>
</head>

<body ng-controller="QRScannerController">


    <div class="container vh-100" style="background:#f9fafb ;">
        <div class="row">
            <div class="col mt-5">
                <h1 class="text-center">The DVMS</h1>
                <p class="text-center p-2">
                    Your Digital Gatekeeper to Every Visit.
                </p>
            </div>
        </div>

        <div class="row p-2 my-4 " id="Qcontainer">
            <div class="col-md-6 d-flex justify-content-center align-items-center flex-column">
                <a href="#" ng-click="startScanning()" class="linkclass" >
                    <img width="100" height="100" src="https://img.icons8.com/color/100/man-in-a-tuxedo-skin-type-3.png" alt="man" />
                    <p class="h5 p-2 ">Guest</p>
                </a>
           </div>
            <div class="col-md-6 d-flex justify-content-center align-items-center flex-column">
                @* <p class="h4"> Walk in Visitor </p> *@
                <a href="#" ng-click="showSuccessMessage('Welcome to XYZ Corporation!','You will be attended by: abc')" class="linkclass">
                    <img width="100" height="100" src="https://img.icons8.com/color/100/accompany-skin-type-3.png" alt="accompany" />
                    <p class="h5 p-2 "> Walk in Visitor</p>
                </a>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content">
                <div class="modal-header">

                    <h5 class="modal-title" id="staticBackdropLabel">Guest</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="video-container" class="d-flex justify-content-center">
                        <video id="video" playsinline></video>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" ng-click="stopScanning()" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


    @* @Html.Partial("~/Views/Shared/PartialViewModalsValidation.cshtml") *@

    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/angularjs/angular.min.js"></script>
    <script src="~/lib/angularjs/scanner.js"></script>
    <script src="~/contollerscript/QRScannerController.js"></script>
    <script src="~/assets/bundles/lib.vendor.bundle.js"></script>
    <script src="~/assets/bundles/sweetalert.bundle.js"></script>
</body>
</html>

