@model DVMS.Models.Admin
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" ng-app="ScannerApp">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    @* <link rel="icon" href="~/admin_assets/images/comapanylogo.jpg" type="image/x-icon" /> *@

    <!--  Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oleo+Script:wght@400;700&family=Oswald:wght@200..700&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Racing+Sans+One&family=Raleway:ital,wght@0,100..900;1,100..900&family=Sora:wght@100..800&display=swap" rel="stylesheet">
   
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/css/main.css" rel="stylesheet" />
    <link href="~/assets/css/theme1.css" rel="stylesheet" />
    <link href="~/assets/plugins/sweetalert/sweetalert.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <style>
        :root {
            --primary-color: rgb(21, 19, 133);
            --bg: #000;
            --accent: #0fcc6f;
            --muted: rgba(255,255,255,0.85)
        }
        * {
            box-sizing: border-box;
            font-family: sans-serif;
        }
        .txt-color {
            color: var(--primary-color);
        }
        .linkclass{
            background:white;
            align-items: center;
            justify-content: center;
            flex-direction:column;
            display: flex;
            height: 100%;
            width: 75%;
            border: 2px solid #e5e7eb;
            text-decoration:none;

            border-radius: 16px;
            border-color:#115740;
             padding: 2rem;
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.05);
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .linkclass, a {
            color: black;
        }
        .linkclass:hover {
            background: #f9fafb ;
            color:white;
                border: 2px solid #4caf50;
            transition: all .3s ease-in-out;
            transform: translateY(-5px);
            box-shadow: 0 15px 25px rgba(0, 0, 0, 0.1);
       }
       h1{
            font-family: 'Poppins', sans-serif;
            font-size: 2rem;
            /* font-weight: 500; */
            /* color: #1f2937; */
            /* font-size: 3rem; */
            font-weight: 700;
            color: #002244;
    }
    p {
        font-size: 1rem;
        color: #6b7280; /* Muted gray */
    }
    </style>
    <style>
        .app {
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            position: relative
        }
        #video {
            /* position: fixed; */
            inset: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transform: scaleX(1)
        }
        #overlayBox {
            position: fixed;
            left: 50%;
            top: 50%;
            transform: translate(-50%,-50%);
            width: 86%;
            aspect-ratio: 1.6;
            border: 2.5px dashed var(--accent);
            border-radius: 10px;
            box-shadow: 0 8px 30px rgba(0,0,0,0.6);
            pointer-events: none
        }
        /* Tablets */
        @@media (min-width: 768px) {
            #overlayBox {
                width: 60%;        /* reduce for tablets */
                max-width: 500px;  /* prevent too large */
            }
        }
        /* Desktop */
        @@media (min-width: 992px) {
            #overlayBox {
                width: 45%;        /* smaller box */
                max-width: 480px;  /* safety */
            }
        }
        /* Large Desktop / Wide screens */
        @@media (min-width: 1400px) {
            #overlayBox {
                width: 35%;
                max-width: 460px;
            }
        }
        .controls {
            position: absolute;
            left: 30px;
            top: 30px;
            display: flex;
            gap: 10px;
            z-index: 30
        }
        .bttn {
            background: rgba(0,0,0,0.45);
            backdrop-filter: blur(4px);
            border: 1px solid rgba(255,255,255,0.06);
            color: var(--muted);
            padding: 10px 12px;
            border-radius: 10px;
            font-size: 16px;
            cursor: pointer
        }
        .btn.warning {
            background: var(--accent);
            color: #000;
            font-weight: 600
        }
        .bottomBar {
            position: fixed;
            left: 50%;
            transform: translateX(-50%);
            bottom: 18px;
            display: flex;
            gap: 14px;
            z-index: 30
        }
       /*  #startBtn {
            padding: 12px 18px
        } */
        #captureBtn {
            width: 68px;
            height: 68px;
            border-radius: 50%;
            display: grid;
            place-items: center;
            font-size: 26px
        }
        #captureBtn.circle {
            background: rgba(255,255,255,0.92);
            color: #000
        }
        #switchCamBtn {
            width: 68px;
            height: 68px;
            border-radius: 50%;
            display: grid;
            place-items: center;
            font-size: 26px
        }
        #switchCamBtn.circle {
            background: rgba(255,255,255,0.92);
            color: #000
        }
        #previewModal {
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.85);
            display: none;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 18px;
            z-index: 60
        }
        #previewImg {
            max-width: 92%;
            max-height: 64vh;
            border-radius: 8px;
            box-shadow: 0 8px 40px rgba(0,0,0,0.6);
            background: #222
        }
        .modalBtns {
            display: flex;
            gap: 12px;
            margin-top: 14px
        }
        #ocrResult {
            position: fixed;
            right: 12px;
            top: 12px;
            width: 300px;
            max-height: 70vh;
            overflow: auto;
            background: rgba(0,0,0,0.5);
            padding: 10px;
            border-radius: 8px;
            border: 1px solid rgba(255,255,255,0.06);
            z-index: 40
        }
        textarea {
            width: 100%;
            height: 200px;
            background: transparent;
            color: #fff;
            border: 1px dashed rgba(255,255,255,0.06);
            padding: 8px;
            border-radius: 6px;
            font-size: 13px
        }
        small.note {
            display: block;
            color: rgba(255,255,255,0.6);
            margin-top: 8px;
            font-size: 12px
        }
        /* hide raw canvas */
        canvas {
            display: none
        }
</style>
    <title>Entrance - DVMS</title>
</head>

<body ng-controller="QRScannerController" style="background:linear-gradient(135deg,#f8f9fa 0%,#e6f0ed 100%) ;">
    <div class="container vh-100" >
        <div class="row">
            <div class="col mt-5">
                <h1 class="text-center" >Welcome to DVMS</h1>
                <p class="text-center p-2" style="font-size: 1.2rem; font-weight: 700;">
                    Your Digital Gatekeeper to Every Visit.
                </p>
            </div>
        </div>
        <div class="row p-2 my-4 " id="Qcontainer">
            <div class="col-md-6 d-flex justify-content-center align-items-center flex-column">
                <a href="#" ng-click="startScanning()" class="linkclass" >
                    <img width="100" height="100" src="https://img.icons8.com/color/100/man-in-a-tuxedo-skin-type-3.png" alt="man" />
                    <p class="h5 p-2 ">Guest </p>
                    <p class="h6" >Check-In / Check-Out</p>
                </a>
           </div>
            <div class="col-md-6 d-flex justify-content-center align-items-center flex-column">
                <a href="#" data-bs-toggle="modal" data-bs-target="#Visitor" class="linkclass">
                    <img width="100" height="100" src="https://img.icons8.com/color/100/accompany-skin-type-3.png" alt="accompany" />
                    <p class="h5 p-2 "> Walk in Visitor</p>
                </a>
            </div>
        </div>
    </div>

    <!-- Visitor Modal -->
    <div class="modal fade" id="Visitor" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="VisitorLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="VisitorLabel">Visitor Detail</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row clearfix ">
                        <div class="col-md-3 col-sm-12 py-2">
                            <div class="form-group">
                                <label>Full Name</label>
                                <input type="text" id="visitorName" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-12 py-2">
                            <label>Gender</label>
                            <select class="form-control show-tick" id="GenderID">
                                <option value="">-- Select --</option>
                                <option value="1">Male</option>
                                <option value="2">Female</option>
                            </select>
                        </div>
                        <div class="col-md-3 col-sm-12 py-2">
                            <label>Company Name</label>
                            @Html.DropDownListFor(model => model.Company_id, ViewBag.CompanyListVB as SelectList, "-- Select --  ",
                                     new { @class = "form-control fieldwidth", id = "company_Id", @tabindex = 1, ng_model = "selectedCompany", ng_change = "loadEmployees()" })
                        </div>
                        <div class="col-md-3 col-sm-12 py-2">
                            <label>Department Name</label>
                            @Html.DropDownListFor(model => model.Department_id, ViewBag.DepartmentListVB as SelectList, "-- Select --  ", 
                            new { @class = "form-control fieldwidth", id = "Department_Id", @tabindex = 1 })
                        </div>
                        <div class="col-md-4 col-sm-12 py-2">
                            <label>Employee Name</label>
                            <!-- Employee Dropdown (AngularJS Controlled) -->
                            <select class="form-control fieldwidth"
                                    id="Employee_Id"
                                    ng-model="selectedEmployee"
                                    ng-options="e.employee_id as e.employee_name for e in employees track by e.employee_id">
                                <option value="">-- Select Employee --</option>
                            </select>
                            @* @Html.DropDownListFor(model => model.Employee_id, ViewBag.EmployeeListVB as SelectList, "-- Select --  ", new { @class = "form-control fieldwidth", id = "Employee_Id", @tabindex = 1 }) *@
                        </div>
                        <div class="col-md-6 col-sm-12 py-2">
                            <div class="form-group">
                                <label>Purpose of Visit</label>
                                <input type="text" id="visitorPurpose" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix py-2">
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group">
                                <p> CNIC front picture</p>
                                <img id="snapshot" @* style="display:none;" *@ />
                                <button ng-click="OpenCameraFront()" id="btntakefront" class="btn btn-primary mt-2">Take Picture</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" ng-click="InsertVisitor()" class="btn btn-primary" >Check-IN</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalcamerafront" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="VisitorLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="VisitorLabel">Camera</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="app">
                        <!-- your whole camera code -->
                        <video id="video" autoplay playsinline></video>
                        <div id="overlayBox"></div>

                        <div class="controls">
                            <button id="flashBtn" ng-click="toggleFlash()" class="btn bttn text-light">⚡ Flash</button>
                            <button id="stopBtn" ng-click="stopCamera()" class="btn bttn text-light">⏹ Stop</button>
                            <button id="startBtn" ng-click="startCamera()" ng-disabled="startDisabled" class="btn bttn text-light">▶ Start</button>
                        </div>

                        <div class="bottomBar">
                            <button ng-click="capture()" id="captureBtn" class="btn bttn">📸</button>
                            <button ng-click="switchCamera()" id="switchCamBtn" class="btn bttn">🔄</button>
                        </div>

                        <div id="previewModal">
                            <img id="previewImg" />
                            <div class="modalBtns">
                                <button id="retakeBtn" ng-click="retake()" class="btn bttn text-light">Retake</button>
                                <button id="confirmBtn" ng-click="confirm()" class="btn warning text-light">Save</button>
                            </div>
                        </div>

                        <canvas id="procCanvas"></canvas>
                        <canvas id="cropCanvas"></canvas>
                    </div>
                </div>
               @*  <div class="modal-footer ">
                    <button type="button" ng-click="stopCamera()" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button id="switchCamera" class="btn text-light" ng-click="switchCamera()" style="background-color: rgb(21, 19, 133);">Switch Camera</button>
                </div> *@
            </div>
        </div>
    </div>
    
    <!-- Guest -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content">
                <div class="modal-header">

                    <h5 class="modal-title" id="staticBackdropLabel">Guest</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="video-container" class="d-flex justify-content-center">
                        <video id="videoguest" playsinline></video>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" ng-click="stopScanning()" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    @* @Html.Partial("~/Views/Shared/PartialViewModalsValidation.cshtml") *@
    <script src="https://cdn.jsdelivr.net/npm/tesseract.js@5/dist/tesseract.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/angularjs/angular.min.js"></script>
    <script src="~/lib/angularjs/signalr.js"></script>
    <script src="~/contollerscript/QRScannerController.js"></script>
    <script src="~/lib/angularjs/signalRService.js"></script>
    <script src="~/assets/bundles/lib.vendor.bundle.js"></script>
    <script src="~/assets/bundles/sweetalert.bundle.js"></script>
    <script src="~/lib/angularjs/scanner.js"></script>
    <script async src="https://docs.opencv.org/4.x/opencv.js"></script>

</body>
</html>