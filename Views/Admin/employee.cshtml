@model DVMS.Models.Employee

@{
    ViewData["Title"] = "Home Page";
}
@if (TempData["DbVarification"] == null && TempData["NetVarification"] == null && TempData["trailVerion"] == null)
{
<div class="page" ng-controller="Employeecontroller">
    <partial name="PartialViewHeader" />

    <div class="section-body mt-3">
        <div class="container-fluid">
            <div class="row clearfix">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-md-flex justify-content-between mb-2">
                                <ul class="nav nav-tabs b-none">
                                    <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#list"><i class="fa fa-list-ul"></i> Employee List</a></li>
                                    @if(Context.Session.GetInt32("UserAccess_can_create") == 1)
                                    {
                                    <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#addnew"><i class="fa fa-plus"></i> Add New</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="section-body">
        <div class="container-fluid">
            <div class="tab-content">
                <div class="tab-pane fade show active" id="list" role="tabpanel">
                    <div class="row clearfix">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-lg-2 col-md-4 col-sm-6">
                                            <div class="input-group">
                                                <input type="text" class="form-control" placeholder="Name">
                                            </div>
                                        </div>
                                        <div class="col-lg-2 col-md-4 col-sm-6">
                                            <div class="input-group">
                                                <input type="text" class="form-control" placeholder="Department">
                                            </div>
                                        </div>
                                        <div class="col-lg-2 col-md-4 col-sm-6">
                                            <a href="javascript:void(0);" class="btn btn-primary btn-block" title="">Search</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="card">
                                <div class="table-responsive">
                                    <table class="table table-hover table-striped table-vcenter mb-0 text-nowrap">
                                        <thead>
                                            <tr>
                                                <th colspan="5">Employee Detail</th>
                                                <th colspan="3">Activity</th>
                                            </tr>
                                            <tr>
                                                <th class="w30">&nbsp;</th>
                                                <th>S.no</th>
                                                <th>Employee Name</th>
                                                <th>Email</th>
                                                <th>Phone</th>
                                                <th>Company</th>
                                                <th>Department</th>
                                                <th>Role</th>
                                                <th>Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="c in GetEmployeeList">
                                                <td>
                                                    <label class="custom-control custom-checkbox">
                                                        <input type="checkbox" class="custom-control-input" name="example-checkbox1" value="option1">
                                                        <span class="custom-control-label">&nbsp;</span>
                                                    </label>
                                                </td>
                                                <td>{{c.index+1}}</td>
                                                <td><span>{{c.employeeName}}</span></td>
                                                <td><span>{{c.email}}</span></td>
                                                <td><span>{{c.phone}}</span></td>
                                                <td><span>{{c.companyName}}</span></td>
                                                <td><span>{{c.department}}</span></td>
                                                <td><span>{{c.role}}</span></td>
                                                <td><span>{{c.date_time}}</span></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="addnew" role="tabpanel">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Add Employee</h3>
                                </div>
                                <form class="card-body">
                                    <div class="row clearfix">
                                        <div class="col-md-4 col-sm-12">
                                            <div class="form-group">
                                                <label>Login ID</label>
                                                @Html.TextBoxFor(model => model.employee_loginID, new { @class = "form-control", @placeholder = "Full Name", id = "employee_loginID", @autocomplete = "off" })
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-12">
                                            <div class="form-group">
                                                <label>Full Name</label>
                                                @Html.TextBoxFor(model => model.employeeName, new { @class = "form-control", @placeholder = "Full Name", id = "employeeName", @autocomplete = "off" })
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-12">
                                            <div class="form-group">
                                                <label>Email</label>
                                                @Html.TextBoxFor(model => model.email, new { @class = "form-control", @placeholder = "xyz@gmail.com", id = "employeeemail", @autocomplete = "off" })
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-12">
                                            <div class="form-group">
                                                <label>Phone</label>
                                                @Html.TextBoxFor(model => model.phone, new { @class = "form-control", @placeholder = "***-********", id = "employeephone", @autocomplete = "off" })
                                            </div>
                                        </div>
                                        @{
                                            var loginType = Context.Session.GetString("login_type");
                                        }
                                        @if (string.Equals(loginType, "superadmin", StringComparison.OrdinalIgnoreCase))

                                        {
                                        <div class="col-md-4 col-sm-12">
                                            <div class="form-group">
                                                <label>Company</label>
                                                    @Html.DropDownListFor(model => model.companyName, ViewBag.CompanyListVB as SelectList, "-- Select --  ", new { @class = "form-control fieldwidth", id = "companyName" })
                                            </div>
                                        </div>
                                        }
                                        <div class="col-md-4 col-sm-12">
                                            <div class="form-group">
                                                <label>Department</label>
                                                @Html.DropDownListFor(model => model.department, ViewBag.DepartmentListVB as SelectList, "-- Select --  ", new { @class = "form-control fieldwidth", id = "employee_department"})
                                            </div>
                                        </div>
                                       <div class="col-md-4 col-sm-12">
                                            <div class="form-group">
                                                <label>Role</label>
                                                <select class="form-control show-tick" id="employeeRole">
                                                    <option value="">-- Select --</option>
                                                    <option value="10">Manager</option>
                                                    <option value="20">Employee</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                                <button type="button" ng-click="SetEmployeeFunction('@loginType')" class="btn btn-primary">Save</button>
                                            <button type="button" class="btn btn-outline-secondary">Cancel</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="section-body">
        <footer class="footer">
            <div class="container-fluid">
            </div>
        </footer>
    </div>
</div>
}
else
{
    @* @Html.Partial("~/Views/Shared/PartialViewModalsValidation.cshtml") *@
}
<script src="~/assets/bundles/lib.vendor.bundle.js"></script>
<script src="~/lib/angularjs/angular.min.js"></script>
<script src="~/lib/angularjs/signalr.js"></script>
<script src="~/contollerscript/Employeecontroller.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/lib/angularjs/signalRService.js"></script>
