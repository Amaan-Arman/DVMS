@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["DbVarification"] == null && TempData["NetVarification"] == null && TempData["trailVerion"] == null)
{
    <div class="page" ng-controller="Dasboardcontroller">
        <partial name="PartialViewHeader" />

        <div class="section-body mt-3">
            <div class="container-fluid">
                <div class="row clearfix">
                    <div class="col-lg-12">
                        <div class="mb-4">
                            <h4>Welcome to Digital Visitor Management System</h4>
                            <small> Your Digital Gatekeeper to Every Visit. <a href="#">Learn More</a></small>
                        </div>
                    </div>
                </div>
                <div class="row clearfix row-deck">
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Guest Check-In </h3>
                            </div>
                            <div class="card-body">
                                <h5 class=" mb-0 font-32 " ng-repeat="c in CheckInOutList">{{c.gusetCheckIn}}</h5>
                                <span class="font-12">Track Guests <a ng-click="GetgusetCheckInlist('GuestCheckInList')">Detail</a></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Guest Check-Out </h3>
                            </div>
                            <div class="card-body">
                                <h5 class=" mb-0 font-32 " ng-repeat="c in CheckInOutList">{{c.gusetCheckOut}}</h5>
                                <span class="font-12">Track Guests  <a ng-click="GetgusetCheckInlist('GuestCheckOutList')">Detail</a></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Visitor Check-In </h3>
                            </div>
                            <div class="card-body">
                                <h5 class=" mb-0 font-32 " ng-repeat="c in CheckInOutList">{{c.visitorCheckIn}}</h5>
                                <span class="font-12">Track Visitor  <a ng-click="GetgusetCheckInlist('VisitorCheckInList')">Detail</a></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Visitor Check-Out  </h3>
                            </div>
                            <div class="card-body">
                                <h5 class=" mb-0 font-32 " ng-repeat="c in CheckInOutList">{{c.visitorCheckOut}}</h5>
                                <span class="font-12">Track Visitor  <a ng-click="GetgusetCheckInlist('VisitorCheckOutList')">Detail</a></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix row-deck">
                    <div class="col-xl-12 col-lg-12">
                        <div class="card">
                            <div class="card-header">
                               <h3 class="card-title">Floors Wise Guests and Visitors</h3>
                               @*<div class="card-options">
                                    <button class="btn btn-sm btn-outline-secondary mr-1" id="one_month">1M</button>
                                    <button class="btn btn-sm btn-outline-secondary mr-1" id="six_months">6M</button>
                                    <button class="btn btn-sm btn-outline-secondary mr-1 active" id="one_year">1Y</button>
                                    <button class="btn btn-sm btn-outline-secondary mr-1" id="ytd">YTD</button>
                                    <button class="btn btn-sm btn-outline-secondary" id="all">ALL</button>
                                </div>*@
                            </div>
                            <div class="card-body">
                                <div id="chart"></div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="section-body">
            <div class="container-fluid">
                <div class="row clearfix">
                    <div class="col-6 col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Guests Summary</h3>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <div class="table-responsive">
                                        <table class="table table-hover table-striped table-vcenter mb-0 text-nowrap">
                                            <thead>
                                                <tr>
                                                    <th colspan="5">Check-IN Detail</th>
                                                    <th colspan="3">Activity</th>
                                                </tr>
                                                <tr>
                                                    <th class="w30">&nbsp;</th>
                                                    <th>Invitation ID</th>
                                                    <th>Guest Name</th>
                                                    <th>Host Name</th>
                                                    <th>Floor No</th>
                                                    <th>Company </th>
                                                    <th>Check-In</th>
                                                    <th>Check-Out</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="c in GetTopguest">
                                                    <td>
                                                        <label class="custom-control custom-checkbox">
                                                            <input type="checkbox" class="custom-control-input" name="example-checkbox1" value="option1">
                                                            <span class="custom-control-label">&nbsp;</span>
                                                        </label>
                                                    </td>
                                                    <td><a href="#">{{c.invitation_ID}}</a></td>
                                                    <td><span>{{c.guestFullName}}</span></td>
                                                    <td><span>{{c.hostName}}</span></td>
                                                    <td><span>{{c.floor_no}}</span></td>
                                                    <td><span>{{c.company_name}}</span></td>
                                                    <td><span>{{c.gusetCheckInTime}}</span></td>
                                                    <td>{{c.gusetCheckOutTime}}</td>
                                                    <th ng-if="c.gusetCheckOutTime =='---' "><button class="btn btn-primary" ng-click="Guestcheckout(c.invitation_ID)">Check Out</button></th>
                                                    @* <td><span class="tag tag-danger">{{c.HostName}}</span></td>
                                                    <td><span class="tag tag-info">Medium</span></td>*@
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Visitors Summary</h3>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <div class="table-responsive">
                                        <table class="table table-hover table-striped table-vcenter mb-0 text-nowrap">
                                            <thead>
                                                <tr>
                                                    <th colspan="5">Check-IN Detail</th>
                                                    <th colspan="3">Activity</th>
                                                </tr>
                                                <tr>
                                                    <th class="w30">&nbsp;</th>
                                                    <th>Visitor ID</th>
                                                    <th>Visitor Name</th>
                                                    <th>Host Name</th>
                                                    @* <th>Floor No</th> *@
                                                    <th>Company</th>
                                                    <th>VisitPurpose </th>
                                                    <th>Check-In</th>
                                                    <th>Check-Out</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="c in GetTopvisitor">
                                                    <td>
                                                        <label class="custom-control custom-checkbox">
                                                            <input type="checkbox" class="custom-control-input" name="example-checkbox1" value="option1">
                                                            <span class="custom-control-label">&nbsp;</span>
                                                        </label>
                                                    </td>
                                                    <td><a href="#">{{c.visitorId}}</a></td>
                                                    <td><span>{{c.visitorFullName}}</span></td>
                                                    <td><span>{{c.hostName}}</span></td>
                                                    @* <td><span>{{c.floor_no}}</span></td> *@
                                                    <td><span>{{c.company_name}}</span></td>
                                                    <td>{{c.visitPurpose}}</td>
                                                    <td>{{c.gusetCheckInTime}}</td>
                                                    <td>{{c.gusetCheckOutTime}}</td>
                                                    <th ng-if="c.gusetCheckOutTime =='---' "><button class="btn btn-primary" ng-click="visitorcheckout(c.visitorId)">Check Out</button></th>
                                                    @* <td><span class="tag tag-danger">{{c.HostName}}</span></td>
                                                    <td><span class="tag tag-info">Medium</span></td>*@
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       
    </div>
}
else
{
    @Html.Partial("~/Views/Shared/PartialViewModalsValidation.cshtml")
}
<script src="~/assets/js/page/project-index.js"></script>
<script src="~/assets/bundles/lib.vendor.bundle.js"></script>
<script src="~/lib/angularjs/angular.min.js"></script>
@* <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>*@
<script src="~/lib/angularjs/signalr.js"></script>
<script src="~/contollerscript/Dasboardcontroller.js"></script>
<script src="~/lib/angularjs/signalRService.js"></script>
<script src="~/assets/bundles/sweetalert.bundle.js"></script>